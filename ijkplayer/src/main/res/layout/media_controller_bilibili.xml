<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@null"
        android:src="@drawable/ic_tv_24dp"
        android:layout_margin="@dimen/dp_10"
        />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_margin="@dimen/dp_5"
        android:src="@drawable/selector_bilibili_play_pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/thumb_drawable"
        app:layout_constraintLeft_toLeftOf="parent" />


    <com.top.androidx.seekbar.IndicatorSeekBar
        android:id="@+id/thumb_drawable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:isb_thumb_drawable="@mipmap/ic_launcher"
        app:isb_progress="0"
        app:isb_show_indicator="none"
        app:isb_show_tick_texts="false"
        app:isb_ticks_count="2"
        app:layout_constraintBottom_toBottomOf="@id/play"
        app:layout_constraintLeft_toRightOf="@+id/play"
        app:layout_constraintTop_toTopOf="@id/play"
        app:layout_constraintRight_toLeftOf="@id/tv_progress"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:32/45:45"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        app:layout_constraintLeft_toRightOf="@id/thumb_drawable"
        app:layout_constraintBottom_toBottomOf="@id/play"
        app:layout_constraintTop_toTopOf="@id/play" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/fullscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_margin="@dimen/dp_5"
        android:src="@drawable/selector_bilibili_full_screen"
        app:layout_constraintLeft_toRightOf="@id/tv_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>